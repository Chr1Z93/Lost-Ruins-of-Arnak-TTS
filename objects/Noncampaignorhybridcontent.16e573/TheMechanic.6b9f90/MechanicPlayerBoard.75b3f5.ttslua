function rotateCW()
  wheel = getObjectFromGUID('d3657d')
  if wheel ~= nil then
    if WAIT then
        return
    else
        WAIT = true
        Wait.time(function() WAIT = false end, .5)

        local rot = wheel.getRotation()
        rot.y = rot.y+90
        wheel.setRotationSmooth(rot)
    end
  end

end

function rotateCCW()
  wheel = getObjectFromGUID('d3657d')
  if wheel ~= nil then
    if WAIT then
        return
    else
        WAIT = true
        Wait.time(function() WAIT = false end, .5)

        local rot = wheel.getRotation()
        rot.y = rot.y-90
        wheel.setRotationSmooth(rot)
    end
  end

end

<TableLayout id="optionsMenuLeft"
	active="false"
	rectAlignment="LowerRight"
	offsetXY="-210 80"
	height="490"
	width="225"
	cellPadding="24 0 12 12"
	cellBackgroundColor="clear"
	rowBackgroundColor="rgba(1, 1, 1, 0.85)">
	<Row preferredHeight="180">
		<Cell>
			<ToggleGroup>
				<VerticalLayout>
					<Text fontStyle="Bold"
						alignment="MiddleLeft">Board</Text>
					<Toggle onValueChanged="uiToggle"
						id="board1">Bird Temple</Toggle>
					<Toggle onValueChanged="uiToggle"
						id="board2">Snake Temple</Toggle>
					<Toggle onValueChanged="uiToggle"
						id="board3" isOn="True">Random</Toggle>
				</VerticalLayout>
			</ToggleGroup>
		</Cell>
	</Row>
	<Row preferredHeight="245">
		<Cell>
			<ToggleGroup>
				<VerticalLayout>
					<Text fontStyle="Bold"
						alignment="MiddleLeft">Research Track</Text>
					<Toggle onValueChanged="uiToggle"
						id="research1">Bird Temple</Toggle>
					<Toggle onValueChanged="uiToggle"
						id="research2">Snake Temple</Toggle>
					<Toggle onValueChanged="uiToggle"
						id="research3">Monkey Temple</Toggle>
					<Toggle onValueChanged="uiToggle"
						id="research4">Lizard Temple</Toggle>
                    <Toggle onValueChanged="uiToggle"
                        id="research5">Tree Temple</Toggle>
                    <Toggle onValueChanged="uiToggle"
                        id="research6">Waterfall Temple</Toggle>
                    <Toggle onValueChanged="uiToggle" isOn="True"
                        id="research7">Randomize Temple</Toggle>
				</VerticalLayout>
			</ToggleGroup>
		</Cell>
	</Row>
	<Row preferredHeight="105">
		<Cell>
			<ToggleGroup>
				<VerticalLayout>
					<Text fontStyle="Bold"
						alignment="MiddleLeft">Moon Staff</Text>
					<Toggle onValueChanged="uiToggle"
						id="staff1">Blue</Toggle>
					<Toggle onValueChanged="uiToggle"
						id="staff2"
						isOn="True">Red</Toggle>
				</VerticalLayout>
			</ToggleGroup>
		</Cell>
	</Row>
</TableLayout>
